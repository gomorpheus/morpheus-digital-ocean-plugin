    "kubernetes-calico-3-25-0-package",
    "kubernetes-rook-1-15-0-package",
    "kubernetes-fluentbit-3-0-7-package",
    "kubernetes-prometheus-0-12-package",
    "kubernetes-nginx-ingress-operator-1-11-2-package"
